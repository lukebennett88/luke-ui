{
	"name": "luke-ui",
	"version": "0.0.0",
	"private": true,
	"author": "Luke Bennett <hello@lukebennett.com.au>",
	"scripts": {
		"build": "turbo run build",
		"build:docs": "turbo run build --filter=@luke-ui-internal/docs",
		"build:packages": "turbo run build --filter=@luke-ui/*",
		"changeset": "changeset",
		"check:clean": "git clean -nXd",
		"check:format": "pnpm run prettier --check",
		"check:lint": "turbo run check:lint",
		"check:types": "turbo run check:types",
		"ci:publish": "turbo run build --filter=docs^... && changeset publish",
		"ci:version": "changeset version",
		"clean": "git clean -fXd",
		"dev": "turbo run dev --parallel",
		"dev:packages": "turbo run dev --parallel --filter=@luke-ui/*",
		"format": "pnpm run prettier --write \"**/*.{js,json,md,mjs,ts,tsx}\"",
		"fresh": "pnpm run clean && pnpm install",
		"groom": "pnpm install && pnpm run format && pnpm run lint && pnpm run sort:packages && pnpm run build:packages",
		"lint": "turbo run lint",
		"new:package": "plop --plopfile scripts/plopfile.mjs",
		"prettier": "prettier .",
		"sort:packages": "sort-package-json \"package.json\" \"*/**/package.json\"",
		"test": "pnpm run validate && pnpm run test:unit run",
		"test:unit": "vitest",
		"validate": "npm-run-all --parallel check:*"
	},
	"prettier": {
		"proseWrap": "always",
		"quoteProps": "consistent",
		"singleQuote": true,
		"tabWidth": 2,
		"useTabs": true
	},
	"dependencies": {
		"@changesets/changelog-github": "^0.4.6",
		"@changesets/cli": "^2.24.4",
		"@ladle/react": "^2.4.2",
		"@testing-library/dom": "^8.17.1",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/eslint": "^8.4.6",
		"@vitejs/plugin-react": "^2.0.1",
		"chalk": "^5.0.1",
		"eslint": "^8.23.0",
		"eslint-config-luke-ui": "workspace:*",
		"happy-dom": "^6.0.4",
		"npm-run-all": "^4.1.5",
		"plop": "^3.1.1",
		"prettier": "^2.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sort-package-json": "^1.57.0",
		"tsup": "^6.2.3",
		"turbo": "^1.4.5",
		"typescript": "^4.8.2",
		"vite": "^3.0.9",
		"vitest": "^0.22.1",
		"vitest-axe": "^0.0.7",
		"vitest-dom": "^0.0.4"
	},
	"packageManager": "pnpm@7.8.0",
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"volta": {
		"node": "16.16.0"
	}
}
