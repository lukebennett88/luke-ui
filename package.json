{
	"name": "luke-ui",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=@luke-ui/*",
		"clean": "git clean -fXd",
		"dev": "turbo run dev --parallel",
		"format": "prettier --write \"**/*.{js,json,md,mjs,ts,tsx}\"",
		"fresh": "pnpm run clean && pnpm install",
		"lint": "turbo run lint"
	},
	"prettier": {
		"quoteProps": "consistent",
		"singleQuote": true,
		"tabWidth": 2,
		"useTabs": true
	},
	"dependencies": {
		"@types/eslint": "^8.4.5",
		"eslint": "^8.21.0",
		"eslint-config-luke-ui": "workspace:*",
		"prettier": "^2.7.1",
		"prettier-plugin-packagejson": "^2.2.18",
		"tsup": "^6.2.1",
		"turbo": "^1.4.2"
	},
	"packageManager": "pnpm@7.8.0",
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	},
	"volta": {
		"node": "18.7.0"
	}
}
